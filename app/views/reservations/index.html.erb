<h1>Listing reservations</h1>

<table>
  <thead>
    <tr>
      <th>Hor√°rio</th>
      <%- week_days.each do |day| -%>
        <th><%= t("week_days.#{day}") %></th>
      <%- end -%>
    </tr>
  </thead>

  <tbody>
    <%- hours.each do |hour| -%>
      <tr>
        <th><%= hour %></th>
        <%- week_days.each do |day| -%>
          <td>
            <%- if reservation=find_reservation(hour, day) -%>
              <%- if reserved_for_current_user?(reservation) -%>
                <%= link_to "Reservado para #{reserved_for(reservation)}", reservation,
                    method: :delete, data: { confirm: 'Are you sure?' } %>
              <%- else -%>
                Reservado para <%= reserved_for(reservation) %>
              <%- end -%>
            <%- else -%>
              <%= link_to "Disponivel", new_reservation_path %>
            <%- end -%>
          </td>
        <%- end -%>
      </tr>
    <%- end -%>
  </tbody>
</table>