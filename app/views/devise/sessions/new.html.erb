<div class='col-md-4'>
  <h2 class='form-signin-heading'><%= t 'devise.forms.signin' %></h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'form_sign_in', :role => 'form') do |f| %>
    <div><%= f.email_field :email, :autofocus => true, :placeholder => 'Email' %></div>

    <div><%= f.password_field :password, :placeholder => t('activerecord.attributes.user.password') %></div>

    <div><%= f.submit t('devise.forms.signin') %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
