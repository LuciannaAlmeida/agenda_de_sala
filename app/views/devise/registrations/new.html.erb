<div class='col-md-4'>
  <h2 class='form-signup-heading'>Sign up</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div><%= f.email_field :email, :autofocus => true, :placeholder => 'Email' %></div>
  
    <div><%= f.text_field :first_name, :placeholder => t('activerecord.attributes.user.first_name') %></div>
  
    <div><%= f.text_field :last_name, :placeholder => t('activerecord.attributes.user.last_name') %></div>

    <div><%= f.password_field :password, :placeholder => t('activerecord.attributes.user.password') %></div>

    <div><%= f.password_field :password_confirmation, :placeholder => t('activerecord.attributes.user.password_confirmation')%></div>

    <div><%= f.submit "Sign up" %></div>
  <% end %>

</div>